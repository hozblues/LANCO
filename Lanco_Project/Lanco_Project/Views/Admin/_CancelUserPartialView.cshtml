@model Lanco_Project.Models.Users

<div class="modal fade" id="CancelUserModal-@Model.UserID" tabindex="-1" aria-labelledby="CancelUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="CancelUserModalLabel">Desactivar Usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @using (Html.BeginForm("Cancel", "Admin", FormMethod.Post))
            {
                <div class="modal-body">
                    <div class="mb-1">
                        @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })
                        <label class="form-label">¿Estas seguro en desactivar al usuario?</label>
                        <br />
                        <label>
                            <strong>
                                @Html.DisplayFor(model => model.UserFirstName)
                                @Html.DisplayFor(model => model.UserLastName)
                            </strong>
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnCloseCancelUser" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button id="btnCancelUser" type="submit" class="btn btn-primary">Desactivar</button>
                </div>
            }
        </div>
    </div>
</div>