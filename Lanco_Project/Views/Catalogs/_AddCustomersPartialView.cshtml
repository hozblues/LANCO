@model Lanco_Project.Models.CCustomers

<div class="modal fade" id="AddCustomersModal" tabindex="-1" aria-labelledby="AddCustomersModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AddCustomersModalLabel">Alta del Cliente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @using (Html.BeginForm("AddCustomers", "Catalogs", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="modal-body" id="div_AddCustomers">
                    <div class="mb-1">
                        <label class="form-label">Nombre del Cliente</label>
                        @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-1">
                        <label class="form-label">Estatus</label>
                        @Html.CheckBoxFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-check-input" } })
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnCloseAddCustomers" type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="clear_inputs('div_AddCustomers');">Cerrar</button>
                    <button id="btnAddCustomers" type="submit" class="btn btn-primary">Guardar</button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}