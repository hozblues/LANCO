@model List<Lanco_Project.Models.CConstructionSite>

@{
    ViewBag.Title = "ConstructionSite";
}

<h2>Obra</h2>

<div class="card">
    <div class="card-body">
        @Html.Partial("_AddConstructionSitePartialView", new Lanco_Project.Models.CConstructionSite())
        <a class="btn btn-success" data-bs-toggle="modal" data-bs-target="#AddConstructionSiteModal">Crear Nuevo</a>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre de la Obra</th>
                    <th scope="col">Estatus de la Obra</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ConstructionSiteID</td>
                        <td>@item.ConstructionSiteName</td>
                        <td>@item.IsActive</td>
                        <td>
                            @Html.Partial("_EditConstructionSitePartialView", item)
                            <button id="EditShowModal" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="@("#EditConstructionSiteModal-" + item.ConstructionSiteID)" data-url="@Url.Action($"EditConstructionSite/{item.ConstructionSiteID}")">Editar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (Session["Message"] != null)
{
    @Html.Partial("_ValidationPartialView")
}